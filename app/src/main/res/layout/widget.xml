<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/widget_bg"
             android:orientation="horizontal"
             android:padding="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="8"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:textSize="16sp"
            android:text="Ładowanie..."
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="bottom|right"
            android:visibility="gone">

            <Button
                android:id="@+id/wnb_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poprz"/>



                <ImageView
                    android:id="@+id/wnb_fav"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_wg"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/wnb_copy"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_copy"
                android:background="@drawable/button_wg"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/wb_szczeg"
                android:background="@drawable/button_wg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_deta"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/wb_conf"
                android:layout_width="wrap_content"
                android:background="@drawable/button_wg"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_action_settings"/>


            <Button
                android:id="@+id/wnb_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nast"/>

        </LinearLayout>
    </LinearLayout>

